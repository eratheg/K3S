apiVersion: v1
kind: ConfigMap
metadata:
  name: service-nginx-test
data:
  path-a.html: |
    "/path-a.html" on service-nginx-test
  path-b.html: |
    "/path-b.html" on service-nginx-test
  index.html: |
    "/" on service-nginx-test  
  404.html: |
    service-nginx-test 404 page
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: service-nginx-test-nginx.conf
data:
  nginx.conf: |
    user  nginx;
    worker_processes  1;
    error_log  /var/log/nginx/error.log warn;
    pid        /var/run/nginx.pid;
    events {
        worker_connections  1024;
    }

    http {
        sendfile        on;
        server {
          listen       80;
          server_name  localhost;

          location / {
              root   /usr/share/nginx/html;
              index  index.html index.htm;
          }

          error_page 404 /404.html;
          error_page   500 502 503 504  /50x.html;
          location = /50x.html {
              root   /usr/share/nginx/html;
          }
        }
    }
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: service-nginx-test
  labels:
    app: service-nginx-test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: service-nginx-test
  template:
    metadata:
      labels:
        app: service-nginx-test
    spec:
      containers:
      - name: nginx
        image: nginx:1.14.2
        ports:
        - containerPort: 80
        volumeMounts:
        - name: html
          mountPath: "/usr/share/nginx/html/"
        - name: config
          mountPath: "/etc/nginx/"
      volumes:
      - name: html
        configMap:
          name: service-nginx-test
      - name: config
        configMap:
          name: service-nginx-test-nginx.conf
---
apiVersion: v1
kind: Service
metadata:
  name: service-nginx-test
spec:
  selector:
    app: service-nginx-test
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80